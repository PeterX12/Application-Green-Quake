<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Application_Green_Quake.Views.EcoActions.EcoActionsSubMenu.CommunityPage"
             Title="Community Subcategories">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Join Environmental Groups"
                    Clicked="NavigateToEnvironmentalGroups"/>
            <Button Text="Create an Environmental Group"
                    Clicked="NavigateToCreateEnvironmentalGroup"/>
            <Button Text="Spread Awarennes on Environmental Issues"
                    Clicked="NavigateToSpreadAwareness"/>
            <Button Text="Do Something for the Community"
                    Clicked="NavigateToDoCommunity"/>
            <Button Text="Donate Unused Items"
                    Clicked="NavigateToDonateItems"/>
            <Button Text="Share This App"
                    Clicked="NavigateToShareThisaApp"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>