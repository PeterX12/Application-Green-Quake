<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Application_Green_Quake.Views.EcoActions.Energy.LedLightbulb">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Water used while brushing your teeth can really add up. Everytime when brushing your teeth turn off the water while brushing to earn some points." />
            <Label Text="Points: 1"
                   TextColor="Green"/>
            <Button Text="Completed"
                    Clicked="AddPointsClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>