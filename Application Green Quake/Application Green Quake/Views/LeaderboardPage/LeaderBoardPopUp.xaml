<?xml version="1.0" encoding="UTF-8"?>
<pages:PopupPage x:Class="Application_Green_Quake.Views.LeaderboardPage.LeaderBoardPopUp"
                 xmlns="http://xamarin.com/schemas/2014/forms"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:animations="clr-namespace:Rg.Plugins.Popup.Animations;assembly=Rg.Plugins.Popup"
                 xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
                 BackgroundColor="#002a1e">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" >
        <Label x:Name="theName" TextColor="White" FontSize="20" HorizontalTextAlignment="Center"/>
        <Image x:Name="profileImage" HeightRequest="300"/>
        <Label x:Name="theRank" TextColor="White" FontSize="20" HorizontalTextAlignment="Center"/>
        <Label x:Name="theBio" TextColor="White" FontSize="20" HorizontalTextAlignment="Center"/>
        <Label x:Name="thePoints" TextColor="White" FontSize="20" HorizontalTextAlignment="Center"/>
    </StackLayout>
    
</pages:PopupPage>
    
    